<div class="users-header">
  <div class="users-header-logo">
    <%= link_to image_tag('logo.png' , size: '200x200'), "/" %>
  </div>
</div>

<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>user information input</h2>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, placeholder:"メールアドレスを入力" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off", placeholder:" パスワードを入力(英数字6文字以上)" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:" 同じパスワードを入力" %>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Log in", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>